{
  "settings":{
    "refresh_interval":"5s",
    "number_of_shards":5,
    "number_of_replicas":1,
    "index":{
      "analysis":{
        "analyzer":{
          "en":{
            "tokenizer":"standard",
            "filter":[
              "asciifolding",
              "lowercase",
              "ourEnglishFilter"
            ]
          },
          "path_analyzer":{
            "tokenizer":"path_hierarchy"
          },
          "pinyin_analyzer":{
            "tokenizer":"my_pinyin",
            "filter":[
              "standard",
              "nGram"
            ]
          }
        },
        "filter":{
          "ourEnglishFilter":{
            "type":"kstem"
          }
        },
        "tokenizer":{
          "my_pinyin":{
            "type":"pinyin",
            "first_letter":"prefix",
            "padding_char":""
          }
        }
      }
    }
  }
}